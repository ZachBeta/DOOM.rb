#!/bin/bash

FREEDOOM_WAD="levels/freedoom-0.13.0/freedoom1.wad"

echo "Running all Rake tasks..."

echo "\nRunning tests..."
rake test

echo "\nRunning WAD info task with Freedoom WAD..."
rake "wad:info[${FREEDOOM_WAD}]"

echo "\nRunning WAD textures task with Freedoom WAD..."
rake "wad:textures[${FREEDOOM_WAD}]"

echo "\nRunning DOOM game (will be terminated after 5 seconds)..."
timeout 5 rake doom

echo "\nAll tasks completed!" 